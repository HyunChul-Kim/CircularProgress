<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.testapplication.CircleProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:progressThickness="15"
        app:progressBackgroundColor="@android:color/darker_gray"
        app:roundedEndPoint="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/timer_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_light"
        android:text="Start"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="@id/progress_circular"
        app:layout_constraintBottom_toBottomOf="@id/progress_circular"
        app:layout_constraintLeft_toLeftOf="@id/progress_circular"
        app:layout_constraintRight_toRightOf="@id/progress_circular"/>

</androidx.constraintlayout.widget.ConstraintLayout>